{
  "name": "node-mysql-cron",
  "version": "1.0.0",
  "description": "A mysql based periodic cron",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "ts-check": "tsc --noEmit",
    "lint": "eslint src",
    "pretty": "prettier -u --write \"**/*\" --log-level warn",
    "test": "npm run build && npm run test:setup && npm run test:run",
    "test:setup": "npm run test:db:create && npm run test:db:migrate",
    "test:db:create": "mysql -u root -e 'CREATE DATABASE IF NOT EXISTS nmc_test;'",
    "test:db:migrate": "mysql -u root -e 'DROP TABLE IF EXISTS nmc_test.nmc_job;' && mysql -u root nmc_test < schema.sql",
    "test:run": "node --test --experimental-test-coverage test/index.js",
    "demo:setup": "npm run test:setup && node test/setup-demo.js",
    "demo:run": "node test/demo.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jim-lake/node-mysql-cron.git"
  },
  "author": {
    "name": "Jim Lake"
  },
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "async": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.7.7",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.13.0",
    "mysql": "^2.18.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  }
}
